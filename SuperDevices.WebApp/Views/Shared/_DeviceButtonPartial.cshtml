@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager

@if (SignInManager.IsSignedIn(User))
{
    <a class="nav-link text-dark" asp-area="" asp-controller="Devices" asp-action="Index">Devices</a>
}
else
{
    <a class="nav-link text-dark" asp-area="" asp-controller="Devices" asp-action="Index">Devices - log in required!</a>
}
